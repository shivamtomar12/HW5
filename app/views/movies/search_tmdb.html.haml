-#  This file is app/views/movies/search_tmdb.html.haml
%h1 The following movies containing '#{@moviename}' were found on TMDB

= form_tag movies_add_tmdb_path, :method => :post, :id => 'tmdb_search_form' do
  %table#movies
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th Select
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie[:title] 
          %td= movie[:rating]
          %td= movie[:release_date]
          %td= check_box_tag "tmdb_movies[#{movie[:id]}]"
  = submit_tag 'Add selected movies'

= link_to 'Return to movie list', movies_path



